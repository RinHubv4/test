local spawnPetBtn = Instance.new("TextButton")
spawnPetBtn.Size = UDim2.new(1, -20, 0, 40)
spawnPetBtn.Position = UDim2.new(0, 10, 0, 140)
spawnPetBtn.BackgroundColor3 = darkGreen
spawnPetBtn.Text = "Spawn Pet"
spawnPetBtn.TextColor3 = textColor
spawnPetBtn.Font = Enum.Font.GothamBold
spawnPetBtn.TextSize = 14
spawnPetBtn.Parent = petSpawnerFrame
Instance.new("UICorner", spawnPetBtn).CornerRadius = UDim.new(0, 6)

spawnPetBtn.MouseButton1Click:Connect(function()
	local petName = petNameInput.Text
	local petWeight = tonumber(petWeightInput.Text)
	local petAge = tonumber(petAgeInput.Text)
	if not petName or petName == "" or not petWeight or not petAge then
		warn("Invalid pet info")
		return
	end

	local petModel = ReplicatedStorage:FindFirstChild("Pet_Models") and ReplicatedStorage.Pet_Models:FindFirstChild(petName)
	if petModel then
		local petClone = petModel:Clone()
		petClone:SetAttribute("Weight", petWeight)
		petClone:SetAttribute("Age", petAge)
		petClone.Parent = workspace
		petClone:SetPrimaryPartCFrame(player.Character.HumanoidRootPart.CFrame * CFrame.new(3,0,0))
	else
		warn("Pet model not found: " .. petName)
	end
end)

-- Tabs Button Logic
local function showFrame(frame)
	duplicateFrame.Visible = false
	spawnerFrame.Visible = false
	petSpawnerFrame.Visible = false
	frame.Visible = true
end

duplicateTabBtn.MouseButton1Click:Connect(function()
	showFrame(duplicateFrame)
end)

spawnerTabBtn.MouseButton1Click:Connect(function()
	showFrame(spawnerFrame)
end)

petSpawnerTabBtn.MouseButton1Click:Connect(function()
	showFrame(petSpawnerFrame)
end)

-- Exit Button
exitBtn.MouseButton1Click:Connect(function()
	gui:Destroy()
end)

-- Minimize Button (toggles visibility)
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
	minimized = not minimized
	if minimized then
		main.Size = UDim2.new(0, 220, 0, 30) -- only title bar visible
		duplicateFrame.Visible = false
		spawnerFrame.Visible = false
		petSpawnerFrame.Visible = false
	else
		main.Size = UDim2.new(0, 220, 0, 400)
		-- restore current visible tab
		if duplicateFrame.Visible then
			showFrame(duplicateFrame)
		elseif spawnerFrame.Visible then
			showFrame(spawnerFrame)
		elseif petSpawnerFrame.Visible then
			showFrame(petSpawnerFrame)
		else
			showFrame(duplicateFrame)
		end
	end
end)

-- DRAGGING (PC and Mobile Touch friendly)
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
	local delta = input.Position - dragStart
	main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

main.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = main.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

main.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

UIS.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		update(input)
	end
end)
